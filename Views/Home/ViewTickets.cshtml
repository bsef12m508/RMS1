@{
    ViewBag.Title = "ViewTickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<RMS.Models.ticket>

<div class="container" style="margin-top:40px;  width:40%; background-color:white; padding-right:15px">
    <div class="row">
        <div class="col-md-12">
            <h2>Sir, @Session["name"]</h2>
            <h4>List of your booked tickets is below: </h4>
            <table class="table table-bordered table-hovered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Train</th>
                        <th>Class</th>
                        <th>Seat No</th>
                        <th>Booking</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.id</td>
                            <td>@obj.train_title</td>
                            <td>@obj.class_title</td>
                            <td>@obj.seat_no</td>
                            <td><button class="btn btn-danger" onclick="return cnf(@obj.id);">Cancel</button></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script>
    function cnf(a)
    {
        var b = confirm("Do you want to delete ticket???");
        if (b == true)
            self.location = '/Home/CancelTicket/' + a;
        else
            return false;
    }
</script>