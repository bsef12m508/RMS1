@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@model RMS.Models.tclass
            
<div class="container" style="margin-top:45px; width:40%;  background-color:white">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" action="add_class" method="POST">
                <label class="control-label" for="economy">Add Class</label>
                <div class="controls" id="class_div">
                    <label class="control-label">Enter Class Attributes</label>
                    <label class="control-label">@TempData["train_id"]</label>
                    <input type="text" name="tid" value="@TempData["train_id"]" hidden />
                    <input type="text" placeholder="Class" class="form-control input-lg" required name="title">
                    <input type="text" placeholder="No of seats" class="form-control input-lg" name="seats" required>
                    <input type='text' placeholder='Price' class='form-control input-lg' name='price' required>
                    <button class="btn btn-success">Click Here</button>
                </div>
            </form>

            <form action="/Admin/save" method="post" enctype="multipart/form-data">

                Upload Image: <input type="file" name="files[]" size="20" id="selector" multiple/>

                <input type="submit" value="upload" @*onclick="return Fun();*@/>
            </form>
        </div>
    </div>
</div>

<script>
    function Fun()
    {
        var a=document.getElementById('selector');
        if (a.files.length==2)
            return true;
        else
            alert("You have to upload two files.");
        return false;
    }
</script>