                                    {
                                        <li class=" active"><a href="/Home/Login" style="color:black;">SignIn</a></li>
                                        <li class=" active"><a href="/Home/Signup" style="color:black;">SignUp</a></li>
                                    }
                                    @if (Session["id"] != null)
                                    {
                                        <li class=" active"><a href="/Home/ViewTickets" style="color:black;">My Tickets</a></li>
                                        <li class=" active"><a href="/Home/Logout" style="color:black;">Logout</a></li>
                                    }

